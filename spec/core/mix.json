          }
        },
        "definitions": {
          "m": { "type": "boolean" },
          "n": { "type": "array" }
        },
        "required": ["bar"]
      },
      {
        "type": "object",
        "properties": {
          "baz": {
            "allOf": [
              { "$ref": "#/definitions/j" },
              { "$ref": "#/definitions/k" }
            ]
          }
        },
        "definitions": {
          "j": { "type": "string" },
          "k": { "minLength": 10 }
        },
        "required": ["baz"]
      }
    ],
    "tests": [
      {
        "description": "should reduce oneOf",
        "schema": "schemas.0",
        "data": { "foo": "y" },
        "hasRefs": 0,
        "hasProps": {
          "properties.foo.oneOf.0.type": "string"
        }
      },
      {
        "description": "should resolve oneOf",
        "schema": "schemas.0",
        "hasRefs": 0,
        "hasProps": {
          "properties.foo.oneOf.1.type": "number"
        }
      },
      {
        "description": "should reduce anyOf",
        "schema": "schemas.1",
        "data": { "bar": [] },
        "hasRefs": 0,
        "hasProps": {
          "properties.bar.anyOf.0.type": "boolean"
        }
      },
      {
        "description": "should resolve anyOf",
        "schema": "schemas.1",
        "hasRefs": 0,
        "hasProps": {
          "properties.bar.anyOf.1.type": "array"
        }
      },
      {
        "description": "should reduce allOf",
        "schema": "schemas.2",
        "data": { "baz": "0123456789" },
        "hasRefs": 0,
        "hasProps": {
          "properties.baz.allOf.0.type": "string"
        }
      },
      {
        "description": "should resolve allOf",
        "schema": "schemas.2",
        "hasRefs": 0,

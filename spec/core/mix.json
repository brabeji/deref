      },
      {
        "type": "object",
        "properties": {
          "num": {
            "anyOf": [
              { "$ref": "#/definitions/one" },
              { "$ref": "#/definitions/two" }
            ]
          }
        },
        "definitions": {
          "one": 1,
          "two": 2
        }
      },
      {
        "type": "object",
        "properties": {
          "num": {
            "allOf": [
              { "$ref": "#/definitions/one" },
              { "$ref": "#/definitions/two" }
            ]
          }
        },
        "definitions": {
          "one": { "x": "y" },
          "two": { "a": "b" }
        }
      }
    ],
    "tests": [
      {
        "description": "should reduce oneOf",
        "schema": "schemas.0",

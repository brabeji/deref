[
  {
    "description": "schema combinations",
    "schemas": [
      {
        "type": "object",
        "properties": {
          "num": {
            "oneOf": [
              { "$ref": "#/definitions/one" },
              { "$ref": "#/definitions/two" }
            ]
          }
        },
        "definitions": {
          "one": 1,
          "two": 2

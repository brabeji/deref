[
  {
    "description": "schema combinations",
    "schemas": [
      {
        "type": "object",
        "properties": {
          "foo": {
            "oneOf": [
              { "$ref": "#/definitions/x" },
              { "$ref": "#/definitions/y" }
            ]
          }
        },
        "definitions": {

      {
        "description": "should reduce anyOf",
        "schema": "schemas.1",
        "hasRefs": 1
      },
      {
        "description": "should resolve anyOf (expand)",
        "schema": "schemas.1",
        "hasRefs": 0,
        "expand": 1
      },
      {
        "description": "should reduce allOf",
        "schema": "schemas.2",
        "hasRefs": 2
      },
      {
        "description": "should resolve allOf (expand)",
        "schema": "schemas.2",
        "hasRefs": 0,
        "expand": 1,
        "hasProps": {
          "properties.num.x": "y",
          "properties.num.a": "b"
        }
      }
